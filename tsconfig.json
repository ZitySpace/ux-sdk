{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react",
    "module": "ESnext",
    "declaration": true,
    "declarationDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "examples", "src/**/*.stories.tsx"]
}
